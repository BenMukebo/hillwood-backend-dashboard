<div id="<%= dom_id artist %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Avatar url:</strong>
    <%= artist.avatar_url %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">First name:</strong>
    <%= artist.first_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Last name:</strong>
    <%= artist.last_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Date of birth:</strong>
    <%= artist.date_of_birth %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Personal details:</strong>
    <%= artist.personal_details %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= artist.status %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this artist", artist, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this artist", edit_artist_path(artist), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
